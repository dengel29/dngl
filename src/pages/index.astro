---
import { BaseLayout } from "../components/base-layout/BaseLayout";
import { XCheckbox } from "../components/x-checkbox/XCheckbox";
---

<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./src/styles/index.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@300&family=Work+Sans&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        margin: 0;
        padding: 0;
        height: 100vh;
      }
    </style>
  </head>
  <body>
    <BaseLayout>
      <div slot="main-content">
        <XCheckbox
          todo-text="Why don't you make a nice home page?"
          client:load
        />
      </div>
    </BaseLayout>
  </body>
</html>
