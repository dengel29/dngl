---
import { HeaderNav } from "../components/header-nav/HeaderNav";
---

<div class="bg">
  <div class="full-screen">
    <HeaderNav />
    <div class="main-content-border">
      <div class="main-content-container">
        <slot name="main-content">
          <p>
            Main content served here (hint: the root element of the main content
            element should have the following attribute
            <code>slot="main-content")</code>
          </p>
        </slot>
      </div>
    </div>
  </div>
</div>

<style>
  :root {
    --h: 86vh;
    --w: 95vw;
    --border-size: 10px;
    --border-radius: 4px;
    --dark-gradient-border: linear-gradient(
      49.9deg,
      rgba(40, 91, 212, 1) -3%,
      rgba(171, 53, 163, 1) 49.3%,
      rgba(255, 204, 112, 1) 97.7%
    );
    --light-gradient-border: linear-gradient(
      49.9deg,
      rgb(208, 246, 255) 0.1%,
      rgb(255, 237, 237) 47.9%,
      rgb(255, 255, 231) 100.2%
    );
  }
  .bg {
    --dotSize: 0.08rem;
    --bgSize: 0.5rem;
    --bgPosition: calc(var(--bgSize) / 2);
    background: radial-gradient(
        circle at center,
        var(--text-1) var(--dotSize),
        transparent 0
      ),
      radial-gradient(
        circle at center,
        var(--text-1) var(--dotSize),
        transparent 0
      );
    background-size: var(--bgSize) var(--bgSize);
    background-position:
      0 0,
      var(--bgPosition) var(--bgPosition);
    box-shadow: inset 10px 10px 100px 110px var(--surface-1);
    height: 100lvh;
    width: 100vw;
    margin: 0;
    padding: 0;
  }
  .full-screen {
    width: 100%;
    height: 92vh;
  }
  .main-content-border {
    width: var(--w);
    height: var(--h);
    border-radius: var(--border-radius);
    margin: 0 auto;
    background-image: var(--dark-gradient-border);
    display: grid;
    place-items: center;
  }
  .main-content-container {
    @media (width < 768px) {
      padding-inline: unset;
    }
    filter: initial;
    color: var(--text-1);
    background-color: var(--surface-1);
    border-radius: calc(var(--border-size) - var(--border-radius) + 5px);
    box-sizing: border-box;
    margin: 0 auto;
    width: 100%;
    height: 98.5%;
    max-height: calc(var(--h) - var(--border-size));
    max-width: calc(var(--w) - var(--border-size));
    overflow-y: scroll;
    padding-inline: 1em;
  }
</style>
